{
  "parser": "babel-eslint",
  "extends": "airbnb-base",
  "plugins": ["jest"],
  "env": {
    "es6": true,
    "node": true,
    "jest/globals": true
  },
  "parserOptions": {
    "ecmaVersion": 6
  },
  "rules": {
    "global-require": "warn",
    "no-underscore-dangle": "off",
    "no-use-before-define": ["error", { "functions": false }]
  }
}
